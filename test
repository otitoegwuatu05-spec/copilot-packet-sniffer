import pytest
from sniffer import redact_data # This assumes your function is in sniffer.py

def test_email_redaction():
    sample_input = "Contact us at support@company.com"
    result = redact_data(sample_input)
    assert "[REDACTED_EMAIL]" in result
    assert "support@company.com" not in result

def test_ip_masking():
    sample_ip = "192.168.1.123"
    result = redact_data(sample_ip)
    assert result == "192.168.1.xxx"
